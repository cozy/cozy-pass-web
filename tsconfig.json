{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "ES2016",
    "sourceMap": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "tldjs": [
        "jslib/src/misc/tldjs.noop"
      ],
      "browser/functionForTarget._showDialog": [
        "src/app/browser/functionForTarget._showDialog.electron"
      ],
      "jslib/*": [
        "jslib/src/*"
      ],
      "cozy/*": [
        "src/cozy/*"
      ]
    },
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true,
    "disableTypeScriptVersionCheck": true
  },
  "exclude": [
    "node_modules",
    "jslib/node_modules",
    "proxy",
    "dist",
    "dist-safari",
    "jslib/dist",
    "build",
    "build-browser",
    "src/app/browser",
    "jslib/spec",
    "jslib/src/cli",
    "jslib/src/services/nodeApi.service.ts",
    "jslib/src/services/lowdbStorage.service.ts"
  ],
  "include": [
    "src"
  ]
}
